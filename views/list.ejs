<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>To Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>     
    
    <link rel="stylesheet" href="css/style.css" />
    <style> 
   body{
  background-image:url('images/Background.jpg');
   background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;}
    </style>
  </head>
  <body>
    <header>
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light fixed-top mask-custom shadow p-3 mb-5 ">
        <div class="container">
          <a class="navbar-brand" href="#!"><span style="color:rgb(184, 182, 182);">TO-DO</span><span style="color: #fff;">List</span></a>
          <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
            data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <!-- <li class="nav-item">
                <a class="nav-link" href="#!">Existing Lists</a>
              </li> -->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                 Existing Lists
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                 <%lists.forEach(element => {%>
                  <li class="dropdown-item"><a href="/<%= element.id %>"><%= element.name %></a></li>
                  <%});%>   
                </ul>
              </li>
            </ul>
            <form  class="d-flex" action="/addlist" method="post">
              <input class="form-control me-2" name="newlist" type="text" placeholder="Make a Custom List" aria-label="Search">
              <button class="btn btn-outline-success" type="submit" >Make</button>
            </form>
          </div>
        </div>
      </nav>
    </header>
   
   
 
  <main>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box mask-custom">
           <% for(var i=0;i<newListItems.length;i++){%>
             <form action="/delete" method="post" >
           <div class="item">
             <input type="checkbox" name="checkbox" value="<%=newListItems[i]._id%>" onChange="this.form.submit()">
           <p><%= newListItems[i].name %></p>
          </div>
          <input type="hidden" name="listname"  value="<%= listTitle%>"  ></input>
        </form>
          <%}%>
          <form  class="d-flex mask-custom" action="/additem" method="post">
            <input class="form-control me-2" type="text" name ="newItem" placeholder="New Item" autocomplete="none">
            <button class="btn btn-outline-success" type="submit" name="list" value=<%=listTitle %>>+</button>
          </form>
  </div>
</main>
  <footer class="text-center text-white" style="background-color: #f1f1f1;">
    <!-- Grid container -->
    <div class="container pt-4">
      <!-- Section: Social media -->
      <section class="mb-4">
       
       <!-- Linkedin -->
        <a
        class="btn btn-link btn-floating btn-lg text-dark m-1"
        href="#!"
        role="button"
        data-mdb-ripple-color="dark"
        ><i class='fa fa-linkedin'></i>
      </a>
       
      
        <!-- Github -->
        <a
          class="btn btn-link btn-floating btn-lg text-dark m-1"
          href="#!"
          role="button"
          data-mdb-ripple-color="dark"
          ><i class='fa fa-github'></i>
        </a>

         <!-- Instagram -->
         <a
         class="btn btn-link btn-floating btn-lg text-dark m-1"
         href="#!"
         role="button"
         data-mdb-ripple-color="dark"
         ><i class="fa fa-instagram"></i
       ></a>
 
      </section>
      <!-- Section: Social media -->
    </div>
    <!-- Grid container -->
  
    <!-- Copyright -->
    <div class="text-center text-dark p-3" style="background-color: rgba(0, 0, 0, 0.2);">
      Â© 2022 Copyright: Wei Wei

    </div>
    <!-- Copyright -->
  </footer>
